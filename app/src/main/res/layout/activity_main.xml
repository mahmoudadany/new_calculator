<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/calculator" />


    <EditText
        android:id="@+id/viewtext"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter number"
        android:textSize="25sp" />

    <LinearLayout
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/c"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C"/>

</LinearLayout>
    <LinearLayout
        android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:padding="15dp"
                android:id="@+id/num1"
                android:onClick="onclick"
                android:layout_margin="2dp"
                android:layout_weight="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"/>

            <Button
                android:padding="15dp"
                android:id="@+id/num2"
                android:onClick="onclick"
                android:layout_margin="2dp"
                android:layout_weight="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"/>

            <Button
                android:padding="15dp"
                android:id="@+id/num3"
                android:onClick="onclick"
                android:layout_margin="2dp"
                android:layout_weight="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"/>

            <Button
                android:padding="15dp"
                android:id="@+id/dev"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"/>

        </LinearLayout>

    <LinearLayout
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:padding="15dp"
            android:id="@+id/num4"
            android:onClick="onclick"
            android:layout_margin="2dp"
            android:layout_weight="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"/>

        <Button
            android:padding="15dp"
            android:id="@+id/num5"
            android:onClick="onclick"
            android:layout_margin="2dp"
            android:layout_weight="8"
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:padding="15dp"
            android:id="@+id/num6"
            android:onClick="onclick"
            android:layout_margin="2dp"
            android:layout_weight="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"/>

        <Button
            android:padding="15dp"
            android:id="@+id/mul"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"/>
    </LinearLayout>

    <LinearLayout
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:padding="15dp"
            android:id="@+id/num7"
            android:onClick="onclick"
            android:layout_margin="2dp"
            android:layout_weight="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"/>

        <Button
            android:padding="15dp"
            android:id="@+id/num8"
            android:onClick="onclick"
            android:layout_margin="2dp"
            android:layout_weight="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"/>

        <Button
            android:padding="15dp"
            android:id="@+id/num9"
            android:onClick="onclick"
            android:layout_margin="2dp"
            android:layout_weight="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"/>

        <Button
            android:padding="15dp"
            android:id="@+id/sub"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <Button
        android:padding="15dp"
        android:id="@+id/num0"
        android:onClick="onclick"
        android:layout_weight="2"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"/>

    <Button
        android:padding="15dp"
        android:id="@+id/dot"
        android:onClick="onclick"
        android:layout_margin="2dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="."/>

    <Button
        android:padding="15dp"
        android:id="@+id/equel"
        android:layout_margin="2dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="="/>

    <Button
        android:padding="15dp"
        android:id="@+id/sum"
        android:layout_margin="2dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+"/>


</LinearLayout>


</LinearLayout>


